{
    "manifest_version": 2,
    "version": "0.0.0",
    "name": "Find On Video",
    "description": "This extension helps finding a specifically part of a youtube video by searching a key on it's subtitles",
    "author": "Paulo Jos√© dos Santos",
    "browser_action": {
        "default_title": "Find On Video",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent" : true
    },
    "permissions": [
        "webRequest",
        "*://*.youtube.com/api/timedtext*",
        "tabs",
        "storage"
    ]
}